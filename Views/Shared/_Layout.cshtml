<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>The World - @ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootswatch/dist/yeti/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/css/style.css" />
</head>
  <body>
      <div id="sidebar">
          <img src="/img/user.png" alt="Use Photo" class="headshot" />
          <span id="username">Grace Dong</span>
          <ul class="navbar-nav" >
              <li class="active"><a asp-controller="App" asp-action="Index">Home</a></li>
              <li><a asp-controller="App" asp-action="About">About</a></li>

            @if (User.Identity.IsAuthenticated)
            {
                <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
                <li><a asp-controller="App" asp-action="Trips">Trips</a></li>
            }
              
          </ul>
      </div>
      <div id="wrapper">
          <nav class="navbar navbar-dark bg-primary">
              <div class="container-fluid">
                  <ul class="navbar-nav d-flex" >
                      <li>
                          <button class="btn btn-primary" id="sidebarToggle">
                              <i class="fa fa-angle-left"></i>
                          </button>
                      </li>
                  </ul>
                  <div class="my-2 my-lg-0">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="btn btn-primary my-2 my-sm-0" asp-controller="Auth" asp-action="Logout">Logout</a>
                    }
                    else 
                    {
                        <a class="btn btn-primary my-2 my-sm-0" asp-controller="Auth" asp-action="Register">Register</a>
                        <a class="btn btn-primary my-2 my-sm-0" asp-controller="Auth" asp-action="Login">Login</a>
                    }
                    
                  </div>
              </div>
              
          </nav>
          <main id="main" class="container-fluid">
              <div>
                  
              </div>
              @RenderBody()
          </main>
          <footer class="container-fluid bg-primary">&copy; 2020 The World Ltd.</footer></p>
      </div>
      <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
      <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
      <script type="text/javascript" src="~/js/site.js"></script>
      @RenderSection("scripts", false);
  </body>
</html>
