@model IEnumerable<TheWorld.Models.Stop>
@{
  ViewBag.Title = "Stops Page";
}

<div class="row">
    <div class="col-md-6">
        <h1>The World!</h1>
        <p>This will be a fun website soon!</p>
        <form>
            <div class="form-group">
                <label>Arrival Date:</label>
                <input type="text" class="form-control" />
            </div>
            <div class="form-group">
                <label>Location:</label>
                <input type="text" class="form-control" />
            </div>
            <div>
                <input type="submit" value="Submit" />
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <h1>The Stops</h1>
        <ul>
          @foreach (var stop in Model)
          {
            <li>@stop.Name: @stop.Arrival.ToString("d")</li>
          }
        </ul>
    </div>
</div>